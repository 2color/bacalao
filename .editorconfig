# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js}]
charset = utf-8

# Indentation for front end files
[src/**.js]
indent_style = space
indent_size = 2

# Indentation for server files
[server/**.js]
indent_style = space
indent_size = 2
